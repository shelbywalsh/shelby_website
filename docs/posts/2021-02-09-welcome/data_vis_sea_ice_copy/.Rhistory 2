gg_season(sea_ice, col=blue2green(15340), year.labels=TRUE)
gg_season(sea_ice, col=sequential(15340), year.labels=TRUE)
gg_season(sea_ice, col=blue(15340), year.labels=TRUE)
gg_season(sea_ice, col=topo.colors(15340), year.labels=TRUE)
